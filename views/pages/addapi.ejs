<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>MicroApi - APP API</title>
    <!-- icon -->
    <link rel="shortcut icon" href="./images/homepage/layers.png" type="image/x-icon" />

    <!-- google font  -->
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>

    <!-- bootstrap -->
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css">


    <!-- font awesome -->
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css"> -->

    <!-- css link -->

     <link href="./css/icons.min.css" rel="stylesheet" type="text/css" />
     <!-- App Css-->
     <link href="./css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="./css/homepage/responsive.css" />
    <link rel="stylesheet" href="./css/homepage/index.css" />
    <link rel="stylesheet" href="./css/homepage/header.css" />
    <link rel="stylesheet" href="./css/homepage/footer.css" />
</head>

<body>


    <div id="layout-wrapper">

        <header>

            <%- include('../templates/header')-%>

        </header>

        <div class="main-content m-0 p-3">

            <div class="page-content">

                <div class="row">

                    <div class="col-lg-4 col-md-4 col-sm-8 form-container">
                        <h2 class="text-center">ADD API</h2>
                        <form class="form api_form" method="POST" id="">
                         <% if(messages.error){ %>
                             <div class="alert alert-danger">
                                 <%- messages.error %>
                             </div>
                         <% } %>
                         <% if(messages.success){ %>
                             <div class="alert alert-success">
                                 <%- messages.success %>
                             </div>
                         <% } %>
                            <div class="form-group row">
                                <input type="email" name="owner" value="" data-selected="add_api"
                                    class="form-control api" placeholder="API Owner Email" id="" autocomplete="off" required>
                            </div>
                            <div class="form-group row">
                                <input type="text" name="name" value="" data-selected="add_api"
                                    class="form-control api" placeholder="API Name" id="" autocomplete="off" required>
                            </div>
                             <div class="form-group row">
                                 <input type="text" name="url" value="" data-selected="add_api"
                                     class="form-control api" placeholder="API URL" id="" autocomplete="off" required>
                             </div>

                             <div class="form-group row">
                                 <input type="text" name="img" value="" id="image-icon" data-selected="add_api" class="form-control api"
                                     placeholder="API Image URL" autocomplete="off" required>
                             </div>


                              <div class="form-group row">
                                  <textarea type="text" name="desc" value="" data-selected="add_api"
                                      class="form-control api" placeholder="API description" id="" autocomplete="off" required></textarea>
                              </div>

                            <div class="form-group row">
                            <button type="submit" class="btn btn-pry submit_now mx-auto btn-block">Add API</button>
                        </div>
                        </form>

                    </div>

                </div>


            </div>

        </div>




          <!-- <footer class="footer" style="left: 0;"> -->
              <footer>
                  <!-- include footer.ejs -->
                  <%- include('../templates/footer')-%>
              </footer>
          <!-- </footer> -->
    </div>


    <!-- JAVASCRIPT -->
    <script src="./libs/jquery/jquery.min.js"></script>
    <script src="./libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="./js/form.js"></script>

</body>
